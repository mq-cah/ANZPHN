  keywords = {Historic building conservation,Historic preservation -- Australia,Historic site preservation},
  annotation = {Accepted: 2014-12-05T01:48:29Z},
  file = {C\:\\Users\\Ewan Coopey\\Documents\\Zotero\\zotero-localfiles\\storage\\68MBYALI\\mcclean_2007_whither_history_-_-_the_emergence_of_a_modern_preservation_movement_in_new_south.pdf;C\:\\Users\\Ewan Coopey\\Documents\\Zotero\\zotero-localfiles\\storage\\NHA6AIXJ\\30411.html}
