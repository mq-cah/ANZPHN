@article{gardner2010,
  title = {Trust, {{Risk}} and {{Public History}}: {{A View}} from the {{United States}}},
  shorttitle = {Trust, {{Risk}} and {{Public History}}},
  author = {Gardner, James B.},
  year = {2010},
