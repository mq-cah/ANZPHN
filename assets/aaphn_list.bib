@phdthesis{vanheekeren2012,
  title = {The Dissemination of {{New Idealist}} Thought in {{Australian}} Print and Radio Media from 1885 to 1945},
  author = {Van Heekeren, Margaret},
  year = {2012},
  address = {{Sydney, Australia}},
  abstract = {This thesis argues that journalism has been neglected as a major source in researching histories of ideas and public intellectualism in Australia. It responds to calls by historians for a close examination of journalism and undertakes an extensive survey of articles from 1885 to 1945 in the Sydney Morning Herald, Daily Telegraph, Adelaide Advertiser and Register newspapers and transcripts of Australian Broadcasting Commission talks programs. The study focuses on one form of philosophical and political thought, New Idealism, which has received little detailed academic attention in Australia. New Idealism, also known as British Idealism, was a philosophical movement of the mid to late nineteenth century and first half of the twentieth century that migrated to Australia with the former students of the British philosophers T. H. Green (1836 \textendash{} 1882) and Edward Caird (1835 \textendash{} 1908). New Idealism was very much a practical philosophy and its followers were just as likely to be found in public lecture halls and on school boards as in university offices. In Australia this public face of New Idealism extended to the media. The thesis identifies a considerable body of previously unknown work in newspaper articles and radio broadcasts by five Australian Idealist thinkers: William Jethro Brown (1869-1930); Francis Anderson (1858 \textendash{} 1941); Mungo MacCallum (1854-1942); Garnet Vere Portus (1883 \textendash{} 1954) and Ernest Burgmann (1885 \textendash{} 1967). Four areas of thought as revealed in the media are examined: on education; the role of the state; international relations and war and post-war reconstruction. The thesis finds a sympathetic media, particularly the Sydney Morning Herald under the proprietorship of the Fairfax family, facilitated coverage of these debates and enabled the Australian Idealists to have, at times, considerable influence as public intellectuals. This leads to a conclusion that an historical focus on the journalistic report is a highly successful research approach in intellectual history.},
  langid = {english},
  school = {Macquarie University},
  keywords = {Australian history,Australian Media and Journalism History,idealism,Idealism -- Social aspects -- Australia,Journalism -- Political aspects -- Australia -- History,Mass media and public opinion -- Australia -- History,media,media on education,Press and politics -- Australia -- History,public history,public intellectualism}
}

@phdthesis{walker2015,
